{
  "extends": "eslint-config-airbnb",
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "react/prop-types": [2, { ignore: 'children' }],

    // No need for semicolons
    "semi": [2, "never"]
  },
  "plugins": [
    "react"
  ]
}
